<h1>Update Pet</h1>
<form method="POST" action="/pets/<%=@pet.id%>">
    <label for="pet_name">Pet Name</label><br>
        <input type="text" default="<%=@pet.name%>" name="pet[name]" id="pet_name"><br>
    <%@owners.each do |owner|%>
    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner.name == owner.name %>><%=owner.name%></input>
    <%end%>
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <label>and/or, create a new owner:</label>
    <br>
    <label>name:</label>
        <input  type="text" name="owner[name]" id="owner_name"></input>
    <br>
    <input type="submit" value="Update Pet">
</form>

